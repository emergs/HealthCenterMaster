@page
@model HealthCenterMaster.Pages.Schedules.EditModel

@{
    ViewData["Title"] = "Agenda";
}

<div class="d-flex justify-content-center align-items-center h-100">
    <div class="col-md-3">
        <form method="post">
            <h2>@ViewData["Title"]</h2>
            <h4>Tela de edição</h4>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Schedule.Id" />
            <div class="form-group input-group-lg">
                <label asp-for="Schedule.Date" class="control-label"></label>
                <input asp-for="Schedule.Date" class="form-control" />
                <span asp-validation-for="Schedule.Date" class="text-danger"></span>
            </div>
            <div class="form-group input-group-lg">
                <label asp-for="Schedule.Time" class="control-label"></label>
                <input asp-for="Schedule.Time" class="form-control" />
                <span asp-validation-for="Schedule.Time" class="text-danger"></span>
            </div>
            <div class="form-group input-group-lg">
                <label asp-for="Schedule.ClientId" class="control-label"></label>
                <select asp-for="Schedule.ClientId" class="form-control" asp-items="ViewBag.ClientId"></select>
                <span asp-validation-for="Schedule.ClientId" class="text-danger"></span>
            </div>
            <div class="form-group input-group-lg">
                <label asp-for="Schedule.PhysiotherapistId" class="control-label"></label>
                <select asp-for="Schedule.PhysiotherapistId" class="form-control"
                    asp-items="ViewBag.PhysiotherapistId"></select>
                <span asp-validation-for="Schedule.PhysiotherapistId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="w-100 btn btn-lg btn-primary" />Salvar</button>
            </div>
            <div>
                <a asp-page="./Index">Back to List</a>
            </div>
        </form>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</div>
