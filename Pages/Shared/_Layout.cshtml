@using HealthCenterMaster.Models;
@{
    Infos[] infos = new Infos[]
    {
        new Infos {Phone = "(41)98778-7887", Email = "contact@healthcenter.com"}
    };

    News[] news = new News[]
    {
new News { Title = "Avanços Tecnológicos na Fisioterapia: Robôs Revolucionam a Reabilitação", Content = "Um grupo de pesquisadores em fisioterapia desenvolveu robôs inovadores para auxiliar na reabilitação de pacientes. Esses robôs utilizam tecnologia de ponta para fornecer exercícios personalizados, acelerando o processo de recuperação. Os resultados promissores indicam uma mudança significativa na forma como a fisioterapia é praticada.", Author = "Marcus Harris", Author_Specialty =
"Fisioterapia Ortopédica", Date = new DateTime(2023, 12, 12,20,30,00), Image = "images/maos-robo.jpg"},
new News { Title = "Fisioterapia Aquática: Uma Abordagem Refrescante para a Reabilitação", Content = "Em um estudo recente, fisioterapeutas exploraram os benefícios da fisioterapia aquática para pacientes com condições musculares e articulares. Descobriu-se que a resistência da água proporciona um ambiente de baixo impacto, promovendo a mobilidade e aliviando a dor. A fisioterapia aquática emerge como uma opção refrescante e eficaz para a recuperação.", Author = "Emily Bennett",
Author_Specialty = "Fisioterapia Aquática", Date = new DateTime(2023, 12, 20,15,00,00), Image = "images/hidroginastica.jpg"},
new News { Title = "Mindfulness na Fisioterapia: Integrando o Bem-Estar Mental e Físico", Content = "Fisioterapeutas estão adotando abordagens inovadoras, como a incorporação de mindfulness no tratamento. A prática de mindfulness, que envolve a atenção plena e a consciência do corpo, está sendo integrada aos exercícios fisioterapêuticos. Esta abordagem holística visa não apenas à recuperação física, mas também ao bem-estar mental, proporcionando aos pacientes uma experiência completa de cuidados de saúde.", Author = "Brandon Foster",
Author_Specialty = "Fisioterapia Geriátrica", Date = new DateTime(2023, 12, 15,10,35,30), Image = "images/ioga.jpg"}
    };
    ViewBag.Infos = infos;
    ViewBag.News = news;
}

<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge">
    <meta name="description" content="">
    <meta name="keywords" content="">
    <meta name="author" content="Tooplate">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <title>@ViewData["Title"] - HealthCenterMaster</title>
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/animate.css">
    <link rel="stylesheet" href="~/css/owl.carousel.css">
    <link rel="stylesheet" href="~/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="~/css/tooplate-style.css">
</head>

<body id="top" data-spy="scroll" data-target=".navbar-collapse" data-offset="50">

    <!-- PRE LOADER -->
    <section class="preloader">
        <div class="spinner">

            <span class="spinner-rotate"></span>

        </div>
    </section>


    <!-- HEADER -->
    <header>
        <div class="container"> 
            <div class="row">

                <div class="col-md-4 col-sm-5">
                    <p>Welcome to a Professional Health Care</p>
                </div>

                <div class="col-md-8 col-sm-7 text-align-right">
                    <span class="phone-icon"><i class="fa fa-phone"></i> @ViewBag.Infos[0]?.Phone</span>
                    <span class="date-icon"><i class="fa fa-calendar-plus-o"></i> 8:00 - 18:00 (Seg-Sex)</span>
                    <span class="email-icon"><i class="fa fa-envelope-o"></i> <a href="#">@ViewBag.Infos[0]?.Email</a></span>
                </div>

            </div>
        </div>
    </header>


    <!-- MENU -->
    <section class="navbar navbar-default navbar-static-top" role="navigation">
        <div class="container">

            <div class="navbar-header">
                <button class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon icon-bar"></span>
                    <span class="icon icon-bar"></span>
                    <span class="icon icon-bar"></span>
                </button>

                <!-- lOGO TEXT HERE -->
                <a href="index.html" class="navbar-brand"><i class="fa fa-h-square"></i>ealth Center</a>
            </div>

            <!-- MENU LINKS -->
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="#top" class="smoothScroll">Home</a></li>
                    <li><a href="#about" class="smoothScroll">Sobre Nós</a></li>
                    <li><a href="#team" class="smoothScroll">Profissionais</a></li>
                    <li><a href="#news" class="smoothScroll">Notícias</a></li>
                    <li><a href="#google-map" class="smoothScroll">Contato</a></li>
                    <li><a asp-area="Identity" asp-page="/Account/Login" class="smoothScroll">Área Restrita</a></li>
                    <li class="appointment-btn"><a href="#appointment">Marque uma consulta</a></li>
                </ul>
            </div>

        </div>
    </section>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- FOOTER -->
    <footer data-stellar-background-ratio="5">
        <div class="container">
            <div class="row">

                <div class="col-md-4 col-sm-4">
                    <div class="footer-thumb">
                        <h4 class="wow fadeInUp" data-wow-delay="0.4s">Contato</h4>
                        <p class="footer-message">A fisioterapia é a jornada de cura que transforma obstáculos em conquistas, restaurando movimentos, aliviando dores e inspirando uma vida plena. Uma jornada de superação, onde cada passo é uma vitória</p>

                        <div class="contact-info">
                            <p><i class="fa fa-phone"></i>@ViewBag.Infos[0]?.Phone</p>
                            <p><i class="fa fa-envelope-o"></i>@ViewBag.Infos[0]?.Email<a href="#"></a></p>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 col-sm-4">
                    <div class="footer-thumb">
                        <h4 class="wow fadeInUp" data-wow-delay="0.4s">Últimas Notícias</h4>
                        @foreach(var latestNews in ViewBag.News)
                        {
                        <div class="latest-stories">
                            <div class="stories-image">
                                <a href="#"><img src=@latestNews.Image class="img-responsive" alt=""></a>
                            </div>
                            <div class="stories-info">
                                <a href="#">
                                    <h5>@latestNews.Title</h5>
                                </a>
                                <span>@latestNews.Date</span>
                            </div>
                        </div>
                        }
                    </div>
                </div>

                <div class="col-md-4 col-sm-4">
                    <div class="footer-thumb">
                        <div class="opening-hours">
                            <h4 class="wow fadeInUp" data-wow-delay="0.4s">Horário de Atendimento</h4>
                            <p>Seg - Sex <span>08:00 - 18:00</span></p>
                            <p>Sab <span>08:00 - 12:00</span></p>
                            <p>Dom <span>Fechado</span></p>
                        </div>

                        <ul class="social-icon">
                            <li><a href="#" class="fa fa-facebook-square"
                                    attr="facebook icon"></a></li>
                            <li><a href="#" class="fa fa-twitter"></a></li>
                            <li><a href="#" class="fa fa-instagram"></a></li>
                        </ul>
                    </div>
                </div>

                <div class="col-md-12 col-sm-12 border-top">
                    <div class="col-md-4 col-sm-6">
                        <div class="copyright-text">
                            <p>Copyright &copy; 2023 
                                <a href="https://github.com/emergs" target="_parent">Emerson Gonçalves</a>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-6">
                        <div class="footer-link">
                            <a href="#">Laboratórios</a>
                            <a href="#">Departamentos</a>
                            <a href="#">Política e Privacidade</a>
                            <a href="#">Carreira</a>
                        </div>
                    </div>
                    <div class="col-md-2 col-sm-2 text-align-center">
                        <div class="angle-up-btn">
                            <a href="#top" class="smoothScroll wow fadeInUp" data-wow-delay="1.2s"><i
                                    class="fa fa-angle-up"></i></a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </footer>

    <!-- SCRIPTS -->
    <script src="~/js/jquery.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/jquery.sticky.js"></script>
    <script src="~/js/jquery.stellar.min.js"></script>
    <script src="~/js/wow.min.js"></script>
    <script src="~/js/smoothscroll.js"></script>
    <script src="~/js/owl.carousel.min.js"></script>
    <script src="~/js/custom.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>